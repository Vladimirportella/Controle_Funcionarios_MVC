@model Projeto.Presentation.Models.Departamento.DepartamentoEdicaoModel
@{
    ViewData["Title"] = "Edicao";
    Layout = "~/Views/Templates/Layout.cshtml";
}

<h4>Formulário de Edição de Departamentos</h4>
<hr />

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.IdDepartamento)

    <div class="text-danger">
        @Html.ValidationSummary()
    </div>

    <label>Nome do Cargo:</label>
    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control col-md-4" })
    <br />

    <label>Descrição do Cargo:</label>
    @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control col-md-4" })
    <br />

    <input type="submit" value="Atualizar Departamento" class="btn btn-success" />
    <br />
    <br />

    <strong>@TempData["Mensagem"]</strong>
}
