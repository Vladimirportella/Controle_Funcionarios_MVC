@model Projeto.Presentation.Models.Cargo.CargoCadastroModel

@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Templates/Layout.cshtml";
}

<h4>Formulário de Cadastro de Cargos</h4>
<hr />

@using (Html.BeginForm())
{
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>

    <label>Nome do Cargo:</label>
    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control col-md-4" })
    <br />

    <label>Descrição do Cargo:</label>
    @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control col-md-4" })
    <br />

    <input type="submit" value="Cadastrar Cargo" class="btn btn-success"/>
    <br />
    <br />

    <strong>@TempData["Mensagem"]</strong>
}

